<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/IVfotoCard"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/logo_fondonegro"
            android:contentDescription="imagenAnuncio" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TVtituloCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="Titulo"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVdescripcionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/TVtituloCard"
                android:maxLines="2"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="Descripcion"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/TVprecioCard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/TVdescripcionCard"
                android:paddingLeft="10dp"
                android:text="10"
                android:textSize="20sp"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/TVeuro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/TVdescripcionCard"
                android:layout_toRightOf="@+id/TVprecioCard"
                android:paddingLeft="10dp"
                android:text="â‚¬"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:layout_toEndOf="@+id/TVprecioCard"
                tools:ignore="RtlSymmetry" />



        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>


