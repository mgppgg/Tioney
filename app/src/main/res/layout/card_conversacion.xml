<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_conver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:foreground="?android:selectableItemBackground"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/TVusuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:maxLength="20"
            android:text="Nombre del usuario"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/IVnuevo_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/TVusuario"
            android:layout_toRightOf="@+id/TVusuario"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_sms_black_24dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/BTNborrarConver"
            app:srcCompat="@android:color/black"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/BTNborrarConver" />

        <ImageButton
            android:id="@+id/BTNborrarConver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:background="@android:color/transparent"
            android:contentDescription="borrar"
            app:srcCompat="@drawable/ic_delete_black_24dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>